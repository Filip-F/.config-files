[user]
	email = liu.denton+github@gmail.com
	name = Denton Liu
[push]
	default = matching
[alias]
	git = !git
	no-ff-merge = merge --no-ff
	graph = log --graph
	prune-merged = !sh -c 'git branch -d $(git branch --merged HEAD | grep -v "^*")'
	delete = !sh -c 'git push --delete $0 $@ && git branch -D $@'
	squash = !sh -c 'git reset --soft \"$0 $@\" && git commit --amend'

[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	conflictStyle = diff3
	tool = vimdiff
[mergetool]
	prompt = false
[commit]
	cleanup = scissors
[core]
	excludesfile = ~/.globalgitignore
[help]
	autocorrect = 10
[rerere]
	enabled = true
[rebase]
	autoSquash = true
